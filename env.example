## This file shows the required environment variables.
## Copy this to a file named .env and fill in your actual values.
## DO NOT commit the .env file to version control.

## Flask settings
SECRET_KEY="your-super-secret-and-long-random-string"
FLASK_DEBUG=True

## --- LDAP Server Connection Details ---
LDAP_SERVER="ldaps://your-ldap-server.com:636"
LDAP_USE_SSL=True
LDAP_BASE_DN="dc=example,dc=com"
LDAP_BIND_DN="cn=admin,dc=example,dc=com"
LDAP_BIND_PASSWORD="your-admin-password"

## --- LDAP Schema Configuration ---
LDAP_PERSON_OBJECT_CLASS="inetOrgPerson"
LDAP_COMPANY_OBJECT_CLASS="organization"
LDAP_COMPANY_LINK_ATTRIBUTE="o"

## --- Attribute Configuration ---
## A comma-separated list of attribute:DisplayName pairs.
## The order here determines the display order in the forms and detail pages.
## If this line is commented out, a default map will be used.
LDAP_ATTRIBUTE_MAP=cn:Full Name,sn:Surname,givenName:First Name,mail:Email,telephoneNumber:Phone,o:Company,title:Job Title,departmentNumber:Department

