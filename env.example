# .env.example
# This file shows the required environment variables.
# Copy this to a file named .env and fill in your actual values.
# DO NOT commit the .env file to version control.

# Flask settings
SECRET_KEY="your-super-secret-and-long-random-string"
FLASK_DEBUG=True

# --- LDAP Server Connection Details ---
# For a secure connection (LDAPS), use the 'ldaps://' scheme and port 636.
LDAP_SERVER="ldaps://your-ldap-server.com:636"
LDAP_USE_SSL=True

# For a non-secure connection, use 'ldap://' and port 389.
# LDAP_SERVER="ldap://your-ldap-server.com:389"
# LDAP_USE_SSL=False

LDAP_BASE_DN="dc=example,dc=com"
LDAP_BIND_DN="cn=readonly,dc=example,dc=com"
LDAP_BIND_PASSWORD="your-bind-password"

# --- LDAP Schema Configuration (adjust if your schema is different) ---
LDAP_PERSON_OBJECT_CLASS="inetOrgPerson"
LDAP_COMPANY_OBJECT_CLASS="organization"
LDAP_COMPANY_LINK_ATTRIBUTE="o"

